float count1=0,count2=0,count3=0;
   for(int i=0;i<arr.size();i++){
       if(arr.get(i)<0){
           count1++;
       }
       else if(arr.get(i)>0){
           count2++;
       }
       else{
           count3++;
       }
       
   }
   float n=arr.size();
   System.out.println(count2/n);
   System.out.println(count1/n);
   System.out.println(count3/n);
   

    }

}
